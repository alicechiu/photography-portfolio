<div class="contact-title">
  <h2>Get in touch!</h2>
</div>

<div class="col-lg-15">
  <%= form_for @message, url: {action: "create"} do |f| %>

    <% if @message.errors.any? %>
      <div class="alert alert-danger">
        <h2 class="h2-message"><%= pluralize(@message.errors.count, "error") %></h2>
        <ul>
          <% @message.errors.full_messages.each do |message| %>
            <div class="list-group">
              <%= message %>
            </div>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="contact-form">
    <div class="contact-form-group">
      <%= f.label :first_name, "First name", class: "col-sm-1 control-label no-space-break" %>
      <div class="col-sm-10">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="contact-form-group">
      <%= f.label :last_name, "Last name", class: "col-sm-1 control-label no-space-break" %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>

    <div class="contact-form-group">
      <%= f.label :email, "Email", class: "col-sm-1 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="contact-form-group">
      <%= f.label :message, "Message", class: "col-sm-1 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :message, class: "form-control", rows:"5", cols: "1" %>
      </div>
    </div>

    <%= f.submit "Send", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>