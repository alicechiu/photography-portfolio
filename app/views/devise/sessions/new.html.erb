<div class="sign-in-form">
  <div class="col-lg-15">
    <%= form_for(resource, as: resource_name, url: new_user_session_path) do |f| %>

    <div class="register-form">
      <div class="register-form-group">
        <%= f.label :email, "Email", class: "col-sm-1 control-label" %><br />
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="register-form-group">
      <%= f.label :password, "Password", class: "col-sm-1 control-label" %><br />
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="remember-me">
        <%= f.check_box :remember_me, class: "remember-me-input" %>
        <%= f.label :remember_me, "Remember me", class: "no-space-break col-md-1 required" %>
      </div>
      <% end %>

    <div class="form-group">
      <%= f.submit "Sign in", class: "btn btn-primary" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>

    </div>
  </div>
</div>