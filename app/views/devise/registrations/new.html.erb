<div class="register-title">
  <h2>Sign up</h2>
</div>

  <div class="col-lg-15">
    <%= form_for(resource, as: resource_name, url: users_sign_up_path) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="register-form">
          <div class="register-form-group">
            <%= f.label :name, "Name", class: "col-sm-1 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>

          <div class="register-form-group">
            <%= f.label :email, "Email", class: "col-sm-1 control-label" %>
            <div class="col-sm-10">
              <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>

          <div class="register-form-group">
            <%= f.label :password, "Password", class: "col-sm-1 control-label" %>
            <div class="col-sm-10">
              <%= f.password_field :password, placeholder: "Minimum is 6 characters", class: "form-control" %>
            </div>
          </div>

          <div class="register-form-group">
            <%= f.label :password_confirmation, "Password confirmation", class: "control-label", class: "no-space-break col-md-1 required" %><br />
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>

          <br>
          <div class="form-group">
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </div>
      <% end %>

        <%= render "devise/shared/links" %>
      </div>
  </div>