<div class="register-title">
  <h2>Change your password</h2>
</div>

  <div class="col-lg-15">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="register-form">
        <div class="register-form-group">
          <%= f.label :password, "New password", class: "col-sm-1 control-label", class: "no-space-break col-md-1 required" %><br />
          <div class="col-sm-10">
            <%= f.password_field :password, placeholder: "Minimum is 6 characters", class: "form-control" %>
          </div>
        </div>

        <div class="register-form-group">
          <%= f.label :password_confirmation, "Confirm new password", class: "control-label", class: "no-space-break col-md-1 required" %><br />
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>

        <br>
        <div class="form-group">
          <%= f.submit "Change my password", class: "btn btn-primary" %>
        </div>
    <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>